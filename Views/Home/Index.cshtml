
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_Layout.cshtml";
}
@using EdliyyeProduct.Models.Entity
@model List<Posst> 


<div class="container">
    @using (Html.BeginForm())
    {
        <div class="form-group">
            <div style="width:25%;float:left;">
                @Html.TextBox("ara", null, new { @class = "form-control", @placehoder = "Search" })
            </div>
            <div style="float:left">
                <input type="submit" value="Search" class="btn btn-info" />

            </div>

        </div>
    }
</div>


<table class="table" id="urun">
    <thead style="background-color:aliceblue">
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Body</th>
            <th>UserID</th>
            <th>Comments</th>


        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
        <tr>
            <td>@Html.DisplayFor(x => m.Id)</td>
            <td>@Html.DisplayFor(x => m.Title)</td>
            @*<td>@Html.DisplayFor(x => m.AlisFiyati)</td>*@
            <td>@Html.DisplayFor(x => m.Body)</td>
            <td>@Html.DisplayFor(x => m.UserID)</td>
            <td><a href="/Home/CommentPage/@m.Id" class="btn btn-secondary">Comments</a></td>
            @*<td>%@Html.DisplayFor(x => m.KDV)</td>*@
        </tr>

        }
    </tbody>
</table>

